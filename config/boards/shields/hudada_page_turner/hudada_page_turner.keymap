#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/hid_usage.h>
#include <dt-bindings/zmk/hid_usage_pages.h>

/ {
    // 1. 定义我们的自定义行为实例
    behaviors {
        pg_turn: page_turner_cmd {
            compatible = "hudada_page_turner,behavior-page-turner-command";
            #binding-cells = <1>;
        };
    };

    // 2. 直接将行为应用到按键
    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
                // 第一个按键：直接调用翻页行为，参数为“上一页”
                &pg_turn C_SCAN_PREV

                // 第二个按键：使用 hold-tap 行为
                &ht (&pg_turn C_AC_BACK) (&pg_turn C_SCAN_NEXT)
            >;
        };
    };

    // 3. 配置 hold-tap 的参数
    zmk,behavior-config {
        compatible = "zmk,behavior-config";
        tapping-term-ms = <200>;
    };
};